// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminEntity {
  uid       Int    @id @default(autoincrement())
  username  String @unique
  pass_hash String
  pass_salt String
  role      Int    @default(1)
}

model RequestSupporterEntity {
  id             Int     @id @default(autoincrement())
  name           String
  phone          String  @unique
  address        String
  social_media   String
  help_agit      Boolean @default(false)
  help_part_life Boolean @default(false)
  help_friends   Boolean @default(false)
  help_vote      Boolean @default(false)
  help_custom    String? @db.VarChar(200)
  speak_out      String? @db.Text
  request_time   Int     @default(0)
  ip             String  @default("0.0.0.0")
  useragent      String  @default("")
}
